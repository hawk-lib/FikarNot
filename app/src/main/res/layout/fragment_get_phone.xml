<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/colorGreen"
    tools:context=".ui.authentication.GetPhoneFragment">

        <ScrollView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="@drawable/authentication_bg">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/app_description_fragment"
                    android:layout_marginBottom="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/country_codeET"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:inputType="phone"
                        android:textSize="20sp"
                        android:imeOptions="actionNext"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/transparent_edittext"
                        android:backgroundTint="@color/colorAccent"
                        android:backgroundTintMode="add"
                        android:gravity="center"
                        android:hint="@string/_91"
                        android:autofillHints="+91" />

                    <EditText
                        android:id="@+id/numberET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:hint="@string/enter_mobile_number"
                        android:paddingHorizontal="15dp"
                        android:textSize="20sp"
                        android:imeOptions="actionGo"
                        android:background="@drawable/transparent_edittext"
                        android:backgroundTint="@color/colorWhite"
                        android:backgroundTintMode="add"
                        android:layout_marginStart="5dp"
                        android:maxLength="10"
                        android:autofillHints="9998887776" />


                </LinearLayout>





                <Button
                    android:id="@+id/get_otpBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/positive_button"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="5dp"
                    android:text="@string/continue_authentication" />


            </LinearLayout>
        </ScrollView>

</LinearLayout>